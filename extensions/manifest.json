{
    "manifest_version": 3,
    "name": "Watched: Overlay",
    "version": "1.1",
    "description": "Media Intelligence Layer for Google.",
    "permissions": [
        "cookies"
    ],
    "host_permissions": [
        "https://watched.onrender.com/*"
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/search*",
                "https://www.google.com/save*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}